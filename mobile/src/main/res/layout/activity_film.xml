<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/film_details_backdrop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.ataulm.whatsnext.film.FilmDetailsInfoWidget
            android:id="@+id/film_details_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.ataulm.whatsnext.film.PeopleWidget
            android:id="@+id/film_details_people_cast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:label="@string/film_details_cast_label" />

        <com.ataulm.whatsnext.film.PeopleWidget
            android:id="@+id/film_details_people_crew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:label="@string/film_details_crew_label" />

        <TextView
            android:id="@+id/film_text_watch_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/film_button_mark_watched"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mark as watched" />

        <Button
            android:id="@+id/film_button_mark_not_watched"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mark as not watched" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
